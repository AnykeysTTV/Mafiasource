<style type="text/css">
button.execbutton.small, input.execbutton.small, section#content .execbutton.small {font-size:10px;padding:3px;}
hr {width:100%;height:1px;background:#e1e1e1;margin:1em 0;border:none;}
button.execbutton.green:active, input.execbutton.green:active, section#content .execbutton.green:active {margin-top: 6px;margin-bottom: 5px;}
</style>
<a href="#" id="triggerModal" data-toggle="modal" data-target="#modal"></a>
<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">{{ langs.GROUND }} #{{ ground.getGID }} in {{ ground.getState }}</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <div id="interactGroundAreaResponse">
            {% include "src/Views/game/Ajax/ground.area.twig" %}
        </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default button" data-dismiss="modal">{{ langs.CLOSE }}</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<script type="text/javascript">
$(document).ready(function(){
    if($('#modal').hasClass('in') == false){ $("#triggerModal").click(); $("#triggerModal").remove();}
    $('#modal').on('hidden.bs.modal', function () {
        $("#openTab").empty();
    });
});
</script>
