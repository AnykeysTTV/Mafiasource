    <div class="container">
        
        {% if offline %}
            <h1>{{ langs.OFFLINE_MSG|raw }}</h1>
        {% endif %}
        </div>
        <div class="row">
            <div class="col-md-3">
                {% if userData is not empty %}
                <form id="demo-login" name="login" action="{{ routing.getRouteByRouteName('game') }}" method="POST">
                    <h2>
                        {# <a style="position: relative;top: -5px;margin-bottom:10px" href="{{ routing.getRouteByRouteName('register') }}" class="button">{{ langs.REGISTER_BTN }}</a>&nbsp; #}
